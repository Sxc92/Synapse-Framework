{
  "groups": [
    {
      "name": "synapse.security",
      "type": "com.indigo.security.config.SecurityProperties",
      "description": "安全配置属性",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    }
  ],
  "properties": [
    {
      "name": "synapse.security.enabled",
      "type": "java.lang.Boolean",
      "description": "是否启用安全功能",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.mode",
      "type": "com.indigo.security.config.SecurityProperties$SecurityMode",
      "description": "安全模式：STRICT(严格)、PERMISSIVE(宽松)、DISABLED(关闭)",
      "defaultValue": "STRICT",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.security-logging",
      "type": "java.lang.Boolean",
      "description": "是否启用安全日志",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.security-log-level",
      "type": "java.lang.String",
      "description": "安全日志级别",
      "defaultValue": "INFO",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.white-list.enabled",
      "type": "java.lang.Boolean",
      "description": "是否启用白名单",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.white-list.paths",
      "type": "java.util.List<java.lang.String>",
      "description": "白名单路径列表（支持 Ant 风格路径匹配）",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.token.prefix",
      "type": "java.lang.String",
      "description": "Token 前缀（用于 Authorization 请求头）",
      "defaultValue": "Bearer ",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.token.query-param",
      "type": "java.lang.String",
      "description": "Token 查询参数名",
      "defaultValue": "token",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.token.header-name",
      "type": "java.lang.String",
      "description": "Authorization 请求头名称",
      "defaultValue": "Authorization",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.token.x-auth-token-header",
      "type": "java.lang.String",
      "description": "X-Auth-Token 请求头名称（备用 token 传递方式）",
      "defaultValue": "X-Auth-Token",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.gateway-signature.enabled",
      "type": "java.lang.Boolean",
      "description": "是否启用 Gateway 签名验证",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.gateway-signature.secret",
      "type": "java.lang.String",
      "description": "Gateway 签名密钥（生产环境必须修改为强密钥）",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.gateway-signature.validity-window",
      "type": "java.lang.Long",
      "description": "签名有效期窗口（毫秒），默认 5 分钟，防止重放攻击",
      "defaultValue": 300000,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.gateway-signature.enable-context-passing",
      "type": "java.lang.Boolean",
      "description": "是否启用用户上下文传递",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.internal-service.enabled",
      "type": "java.lang.Boolean",
      "description": "是否启用内部服务调用签名验证",
      "defaultValue": true,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.internal-service.service-name",
      "type": "java.lang.String",
      "description": "当前服务名称（用于标识调用来源）",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.internal-service.secret",
      "type": "java.lang.String",
      "description": "当前服务密钥（用于生成签名，生产环境必须修改为强密钥）",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.internal-service.validity-window",
      "type": "java.lang.Long",
      "description": "签名有效期窗口（毫秒），默认 5 分钟，防止重放攻击",
      "defaultValue": 300000,
      "sourceType": "com.indigo.security.config.SecurityProperties"
    },
    {
      "name": "synapse.security.internal-service.allowed-services",
      "type": "java.util.Map<java.lang.String, java.lang.String>",
      "description": "允许调用的服务白名单（key: 服务名称, value: 服务密钥）",
      "sourceType": "com.indigo.security.config.SecurityProperties"
    }
  ]
}
